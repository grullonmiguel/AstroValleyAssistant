<Application x:Class="AstroValleyAssistant.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AstroValleyAssistant" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/_Core.xaml"/>
                
                <ResourceDictionary Source="/Themes/_Shared.xaml"/>
                <ResourceDictionary Source="/Themes/Animations.xaml"/>

                <ResourceDictionary Source="/Themes/Palettes/Light.xaml"/>
                <ResourceDictionary Source="/Themes/Accents/Purple.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
