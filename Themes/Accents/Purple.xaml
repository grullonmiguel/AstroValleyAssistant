<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <Color po:Freeze="True" x:Key="Color.Primary">#534B80</Color>
    <Color po:Freeze="True" x:Key="Color.Secondary">#DBD8E9</Color>
    <Color po:Freeze="True" x:Key="Color.Tertiary">#30294B</Color>
    <Color po:Freeze="True" x:Key="Color.Light">#FFFFFF</Color>

    <SolidColorBrush po:Freeze="True" x:Key="Brush.Accent"                          Color="{StaticResource Color.Primary}" />
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Accent.Hover"                    Color="#3E3175" />
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Accent.Secondary"                Color="{StaticResource Color.Secondary}" />
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Accent.Tertiary"                 Color="{StaticResource Color.Tertiary}" />

    <SolidColorBrush po:Freeze="True" x:Key="Brush.Background.Primary"              Color="#EDEBF2" />
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Background.Secondary"            Color="{StaticResource Color.Light}" />
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Background.Dialog"               Color="#80000000" />

    <SolidColorBrush po:Freeze="True" x:Key="Brush.Text.Subtle"                     Color="{StaticResource Color.Secondary}"/>
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Accent.Foreground"               Color="#EDEBF2"/>

    <SolidColorBrush po:Freeze="True" x:Key="Brush.Pill.Background"                 Color="{StaticResource Color.Secondary}"/>
    
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Hyperlink.Primary.Foreground"    Color="{StaticResource Color.Light}" />

    <SolidColorBrush po:Freeze="True" x:Key="Brush.Icon.Secondary"                  Color="{StaticResource Color.Secondary}"/>
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Icon.Secondary.MouseOver"        Color="{StaticResource Color.Light}"/>
    
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Control.Primary.Base" Color="#30294B"/>
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Control.Primary.MouseOver" Color="#433A68"/>
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Control.Primary.Pressed" Color="#25203A"/>
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Control.Primary.Border" Color="#4A407A"/>
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Control.Primary.Foreground" Color="#F1EFFF"/>
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Control.Primary.Selected" Color="#51448B"/>
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Control.Primary.Selected.Border" Color="#7B68D1"/>
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Control.Primary.Disabled" Color="#252135"/>
    <SolidColorBrush po:Freeze="True" x:Key="Brush.Control.Primary.Disabled.Foreground" Color="#6E6985"/>

    <SolidColorBrush x:Key="SecondaryPurpleHover" Color="#3E006B" />
    <SolidColorBrush x:Key="SecondaryPurpleLight" Color="#F0F0F0" />
    <SolidColorBrush x:Key="SecondaryPurpleBorder" Color="#4A0080" />
</ResourceDictionary>