<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:AstroValleyAssistant.Themes.Controls">

    <Style x:Key="Theme.Button.IconOnly" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource Brush.Background.Hover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
                <Setter Property="Foreground" Value="{DynamicResource Brush.Accent.Foreground}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Theme.Button.HamburgerMenu" TargetType="Button" BasedOn="{StaticResource Theme.Button.IconOnly}">
        <Setter Property="Content">
            <Setter.Value>
                <Path Width="{StaticResource Size.Icon.Small}" 
                  Height="{StaticResource Size.Icon.Small}" 
                  Stretch="Uniform"
                  Data="{StaticResource Icon.HamburgerMenu}"
                  Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Theme.Button.InfoPill" TargetType="Button">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Small}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.Pill.Background}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="12"
                        Padding="10,4"
                        Background="{TemplateBinding Background}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
                <Setter Property="Foreground" Value="{DynamicResource Brush.Accent.Foreground}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource Brush.Accent}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Theme.Button.Primary" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource Brush.Control.Primary.Base}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Control.Primary.Border}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Control.Primary.Foreground}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="20,8" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6"
                        SnapsToDevicePixels="True">
                        <ContentPresenter x:Name="contentPresenter"
                                      Focusable="False"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"
                                      RecognizesAccessKey="True"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource Brush.Control.Primary.MouseOver}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource Brush.Control.Primary.Pressed}" />
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource Brush.Control.Primary.Selected.Border}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Opacity" Value="0.5" />
                            <Setter Property="Foreground" Value="#888888" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="VibrantButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Subtle}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Text.Subtle}"/>
        <Setter Property="BorderThickness" Value=".5"/>
        <Setter Property="Background" Value="#20000000"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="8" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.7"/>
                            <Setter Property="Background" Value="{DynamicResource Brush.Accent.Secondary}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent.Tertiary}"/>
                            <Setter Property="Foreground" Value="{DynamicResource Brush.Accent.Tertiary}"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Opacity" Value="0.5"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Custome Style for Icon Button -->
    <Style TargetType="{x:Type local:IconTextButton}">
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="{DynamicResource Brush.IconText.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.IconText.Foreground}"/>
        <Setter Property="Foreground"  Value="{DynamicResource Brush.IconText.Foreground}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:IconTextButton}">
                    <Border x:Name="Bd"
                            CornerRadius="6"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <!-- Center everything by default -->
                        <StackPanel x:Name="Layout"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">

                            <Path x:Name="IconPath"
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  Data="{TemplateBinding Icon}"
                                  Fill="{TemplateBinding Foreground}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>

                            <TextBlock x:Name="TextBlock"
                                       Text="{TemplateBinding Text}"
                                       Foreground="{TemplateBinding Foreground}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Icon missing => collapse it; text stays centered because Layout is centered -->
                        <Trigger Property="Icon" Value="{x:Null}">
                            <Setter TargetName="IconPath" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="IconPath" Property="Margin" Value="0"/>
                        </Trigger>

                        <!-- Text missing/empty => collapse it; icon stays centered -->
                        <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                            <Setter TargetName="TextBlock" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter TargetName="TextBlock" Property="Visibility" Value="Collapsed"/>
                        </Trigger>

                        <!-- Typical visual states: change Foreground and the icon follows automatically -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Brush.IconText.Background.MouseOver}"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#22000000"/>
                            <Setter Property="Foreground" Value="{DynamicResource Brush.IconText.Foreground.MouseOver}"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>