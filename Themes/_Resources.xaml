<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!-- This file holds all theme-agnostic resources.-->

    <!--#region Core-->
    <sys:Double x:Key="FontSize.Small">12</sys:Double>
    <sys:Double x:Key="FontSize.Normal">14</sys:Double>
    <sys:Double x:Key="FontSize.Large">18</sys:Double>
    
    <sys:Double x:Key="Size.Header.Height">50</sys:Double>
    <sys:Double x:Key="Size.Icon.Medium">24</sys:Double>
    <sys:Double x:Key="Size.Icon.Small">20</sys:Double>

    <Thickness x:Key="Margin.Page">40 16 0 0</Thickness>
    <Thickness x:Key="Padding.Header">16 0 16 0</Thickness>
    <Thickness x:Key="Margin.Icon.Right" Right="8" />

    <!-- Accent Bar Style -->
    <sys:Double x:Key="Size.AccentBar.Thickness">20</sys:Double>
    <sys:Double x:Key="Size.AccentBar.ThicknessShort">16</sys:Double>
    <sys:Double x:Key="Size.AccentBar.Length">240</sys:Double>
    
    <!--#endregion-->

    <!--#region Application Icons-->

    <Geometry x:Key="Icon.AppLogo">M12,2L2,7L12,12L22,7L12,2M12,14.5L2,9.5V17L12,22L22,17V9.5L12,14.5Z</Geometry>
    <Geometry x:Key="Icon.HamburgerMenu">M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z</Geometry>

    <!--#endregion-->
    
    <!--#region Common-->
    
    <!-- Application Logo Style -->
    <Style x:Key="AppLogo" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path Stretch="Uniform" 
                             Data="{StaticResource Icon.AppLogo}"                              
                             Width="{StaticResource Size.Icon.Medium}" 
                             Height="{StaticResource Size.Icon.Medium}" 
                             Margin="{StaticResource Margin.Icon.Right}"
                             Fill="{DynamicResource Brush.Accent}"/>
                        <TextBlock 
                           Text="Virtual Assistant" 
                           FontSize="20"
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource Brush.Accent}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Application Header Style -->
    <Style x:Key="Theme.Border.Header" TargetType="Border">
        <Setter Property="DockPanel.Dock" Value="Top"/>
        <Setter Property="Margin" Value="{StaticResource Margin.Page}"/>
        <Setter Property="Padding" Value="{StaticResource Padding.Header}"/>
        <Setter Property="Height" Value="{StaticResource Size.Header.Height}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.Background.Secondary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <Style x:Key="Theme.Decorator.AccentOverlay" TargetType="ContentControl">
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <Border HorizontalAlignment="Left"
                               Width="{StaticResource Size.AccentBar.Thickness}"
                               Background="{DynamicResource Brush.Accent}"/>

                        <Border VerticalAlignment="Top" HorizontalAlignment="Left"
                               Height="{StaticResource Size.AccentBar.ThicknessShort}"
                               Width="{StaticResource Size.AccentBar.Length}"
                               Background="{DynamicResource Brush.Accent}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Application View Animation Style -->
    <Style x:Key="ViewSlideInFromTopStyle" TargetType="FrameworkElement">
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform Y="-30"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)" To="0" Duration="0:0:0.4">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Theme.Control.InfoPill" TargetType="ContentControl">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Small}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Border CornerRadius="12"
                        Padding="10,4"
                        Background="{DynamicResource Brush.Pill.Background}">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Theme.Control.TaxStatusPill" TargetType="ContentControl" BasedOn="{StaticResource Theme.Control.InfoPill}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding TaxStatus}" Value="TaxLien">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ContentControl">
                            <Border CornerRadius="12" Padding="10,4" Background="{DynamicResource Brush.Status.Success}">
                                <ContentPresenter TextElement.Foreground="{DynamicResource Brush.Status.Success.Foreground}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <DataTrigger Binding="{Binding TaxStatus}" Value="TaxDeed">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ContentControl">
                            <Border CornerRadius="12" Padding="10,4" Background="{DynamicResource Brush.Status.Danger}">
                                <ContentPresenter TextElement.Foreground="{DynamicResource Brush.Status.Danger.Foreground}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>

        </Style.Triggers>
    </Style>

    <!--#endregion-->

</ResourceDictionary>