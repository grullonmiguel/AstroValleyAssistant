    <!--#region Common-->
    
    <DropShadowEffect x:Key="Dialog.Effect.Shadow" 
                      ShadowDepth="0" 
                      BlurRadius="15" 
                      Color="Black" 
                      Opacity="0.4"/>

    <Style x:Key="Theme.Path.MapElement" TargetType="Path">
        <Setter Property="Stroke" Value="{DynamicResource Brush.Map.Stroke}"/>
        <Setter Property="StrokeThickness" Value="0.5"/>
        <Setter Property="Fill" Value="{DynamicResource Brush.Map.DefaultFill}"/>
        <Setter Property="ToolTip" Value="{Binding Name}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsHovered}" Value="True">
                <Setter Property="Fill" Value="{DynamicResource Brush.Map.HoverFill}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                <Setter Property="Fill" Value="{DynamicResource Brush.Accent}"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Theme.TextBlock.MapLabel" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent.Foreground}"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Application Logo Style -->
    <Style x:Key="AppLogo" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Path 
                            Margin="0"
                            Stretch="Uniform" 
                            Data="{StaticResource Icon.Logo1}"                              
                            Width="{StaticResource Size.Icon.Large}" 
                            Height="{StaticResource Size.Icon.Large}" 
                            Fill="{DynamicResource Brush.Accent}"/>
                        <Path 
                            Margin="-10 0 0 0"
                            Stretch="Uniform" 
                            Data="{StaticResource Icon.Logo2}"                              
                            Width="{StaticResource Size.Icon.Large}" 
                            Height="{StaticResource Size.Icon.Large}" 
                            Fill="{DynamicResource Brush.Accent}"/>
                        <TextBlock 
                            Text="Astro Assistant" 
                            FontSize="20"
                            FontWeight="Bold" 
                            VerticalAlignment="Center"
                            Margin="{StaticResource Margin.Icon.Right}"
                            Foreground="{DynamicResource Brush.Accent}"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Application Header Style -->
    <Style x:Key="Theme.Border.Header" TargetType="Border">
        <Setter Property="DockPanel.Dock" Value="Top"/>
        <Setter Property="Margin" Value="{StaticResource Margin.Page}"/>
        <Setter Property="Padding" Value="{StaticResource Padding.Header}"/>
        <Setter Property="Height" Value="{StaticResource Size.Header.Height}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.Background.Secondary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <Style x:Key="Theme.Decorator.AccentOverlay" TargetType="ContentControl">
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <Border HorizontalAlignment="Left"
                               Width="{StaticResource Size.AccentBar.Thickness}"
                               Background="{DynamicResource Brush.Accent}"/>

                        <Border VerticalAlignment="Top" HorizontalAlignment="Left"
                               Height="{StaticResource Size.AccentBar.ThicknessShort}"
                               Width="{StaticResource Size.AccentBar.Length}"
                               Background="{DynamicResource Brush.Accent}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Application View Animation Style -->
    <Style x:Key="ViewSlideInFromTopStyle" TargetType="FrameworkElement">
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TranslateTransform Y="-30"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                                     To="0" Duration="0:0:0.4">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>

                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     To="1" Duration="0:0:0.3"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Theme.Control.TaxStatusPill" TargetType="ContentControl">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Small}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.Pill.Background}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding TaxStatus}" Value="TaxLien">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ContentControl">
                            <Border CornerRadius="12" Padding="10,4" Background="{DynamicResource Brush.Status.Success}">
                                <ContentPresenter TextElement.Foreground="{DynamicResource Brush.Status.Success.Foreground}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding TaxStatus}" Value="TaxDeed">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ContentControl">
                            <Border CornerRadius="12" Padding="10,4" Background="{DynamicResource Brush.Status.Danger}">
                                <ContentPresenter TextElement.Foreground="{DynamicResource Brush.Status.Danger.Foreground}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>

        </Style.Triggers>
    </Style>

    <Style x:Key="Theme.Control.CountyInfoPill" TargetType="ContentControl">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Margin" Value="8 6 0 0"/>
        <Setter Property="FontSize" Value="{StaticResource FontSize.Small}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}"/>
        <Setter Property="Background" Value="{DynamicResource Brush.Pill.Background}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Border CornerRadius="12" Padding="10,4" Background="{TemplateBinding Background}">
                        <ContentPresenter TextElement.Foreground="{DynamicResource Brush.Accent}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <converters:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter" />

    <Style x:Key="Theme.ContentControl.DialogWindow" TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Border Background="{DynamicResource Brush.Background.Primary}"
                        BorderBrush="{DynamicResource Brush.Border}"
                        BorderThickness="1"
                        CornerRadius="8" Margin="50"
                        Effect="{StaticResource Dialog.Effect.Shadow}">
                        <DockPanel>
                            <Grid DockPanel.Dock="Top" Height="50" Background="Transparent">

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

                                    <TextBlock 
                                        VerticalAlignment="Center" Margin="16,0 0 0" 
                                        FontSize="20" LineHeight="24" Foreground="{DynamicResource Brush.Accent}"
                                        Text="{Binding Content.State.Name, RelativeSource={RelativeSource TemplatedParent}}"/>

                                    <ContentControl Style="{StaticResource Theme.Control.CountyInfoPill}">
                                        <TextBlock Text="{Binding Content.State.TaxStatus, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource EnumToDescriptionConverter}, StringFormat='{} {0}'}"/>
                                    </ContentControl>

                                    <ContentControl Style="{StaticResource Theme.Control.CountyInfoPill}">
                                        <TextBlock>
                                            <Run Text="{Binding Content.State.CountyCount, RelativeSource={RelativeSource TemplatedParent}}" />
                                            <Run Text="counties" />
                                        </TextBlock>
                                    </ContentControl>
                                </StackPanel>
                                <Button 
                                    Content="✕" 
                                    HorizontalAlignment="Right" 
                                    Style="{DynamicResource Theme.Button.IconOnly}"
                                    Padding="15,0"
                                    FontSize="16"
                                    Command="{Binding DataContext.CloseDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </Grid>

                            <ContentPresenter Margin="12"/>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--#endregion-->

</ResourceDictionary>