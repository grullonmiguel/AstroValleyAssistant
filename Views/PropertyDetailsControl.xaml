<UserControl x:Class="AstroValleyAssistant.Views.PropertyDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:control="clr-namespace:AstroValleyAssistant.Themes.Controls">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- Header / Title -->
        <TextBlock Text="Quick Links" Style="{StaticResource Theme.TextBlock.Sidebar.Title}" />

        <Border Grid.Row="1" Style="{StaticResource Theme.Border.Sidebar}" Padding="6 4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                
                <control:IconTextButton Text="Appraiser" Grid.Row="0"
                                        Icon="{StaticResource Icon.Building}"
                                        Command="{Binding OpenAppraiserCommand}"
                                        Style="{StaticResource Theme.Button.IconText.Sidebar}"
                                        IsEnabled="{Binding AppraiserUrl, Converter={StaticResource IsNotNullOrEmptyConverter}, FallbackValue=False}"/>
                <Separator Grid.Row="1" Background="{DynamicResource Brush.Border.Light}" Height=".6"/>
                
                <control:IconTextButton Text="Regrid Details" Grid.Row="2"
                                        Icon="{StaticResource Icon.Regrid}"
                                        Command="{Binding OpenRegridCommand}"  
                                        Style="{StaticResource Theme.Button.IconText.Sidebar}"
                                        IsEnabled="{Binding RegridUrl, Converter={StaticResource IsNotNullOrEmptyConverter}, FallbackValue=False}" />
                <Separator Grid.Row="3" Background="{DynamicResource Brush.Border.Light}" Height=".6"/>
                
                <control:IconTextButton Text="Flood Details" Grid.Row="4"
                                        Icon="{StaticResource Icon.Flood}"
                                        Command="{Binding OpenFloodCommand}" 
                                        Style="{StaticResource Theme.Button.IconText.Sidebar}"
                                        IsEnabled="{Binding HasFemaUrl, FallbackValue=False}"/>
                <Separator Grid.Row="5" Background="{DynamicResource Brush.Border.Light}" Height=".6"/>
                
                <control:IconTextButton Text="Google Map" Grid.Row="6"
                                        Icon="{StaticResource Icon.MapOutline}"
                                        Command="{Binding OpenMapsCommand}" 
                                        Style="{StaticResource Theme.Button.IconText.Sidebar}"
                                        IsEnabled="{Binding HasGoogleUrl, FallbackValue=False}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>