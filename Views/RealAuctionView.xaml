<UserControl x:Class="AstroValleyAssistant.Views.RealAuctionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AstroValleyAssistant.Views"
             xmlns:behaviors="clr-namespace:AstroValleyAssistant.Core.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <DataTemplate x:Key="CountySelectedTemplate">
            <TextBlock Text="{Binding Name}" />
        </DataTemplate>

        <DataTemplate x:Key="CountyDropDownTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Name}" />
                <TextBlock HorizontalAlignment="Center" Grid.Column="1">
                    <Hyperlink NavigateUri="{Binding Calendar}" RequestNavigate="Hyperlink_RequestNavigate" Style="{StaticResource Hyperlinks.Primary}" TextDecorations="None">
                        <Grid Background="Transparent">
                            <Path Data="{StaticResource Icon.Calendar}" Width="14" Height="14" Fill="{DynamicResource Brush.Accent.Secondary}" Stretch="Uniform" />
                        </Grid>
                    </Hyperlink>
                </TextBlock>
            </Grid>
        </DataTemplate>

        <behaviors:ComboBoxItemTemplateSelector x:Key="CountyTemplateSelector" 
                                                SelectedTemplate="{StaticResource CountySelectedTemplate}" 
                                                DropDownTemplate="{StaticResource CountyDropDownTemplate}" />
       
        <DataTemplate x:Key="StatusBadgeTemplate">
            <Border x:Name="StatusBadge" 
                    CornerRadius="4" 
                    Padding="6 4" 
                    HorizontalAlignment="Center"
                    Background="#EEEEEE">
                <TextBlock x:Name="StatusText" 
                       Text="Pending" 
                       Foreground="Gray" 
                       FontSize="10" 
                       HorizontalAlignment="Center"/>
            </Border>

            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Loading">
                    <Setter TargetName="StatusBadge" Property="Background" Value="#3000AEEF"/>
                    <Setter TargetName="StatusText" Property="Foreground" Value="#00AEEF"/>
                    <Setter TargetName="StatusText" Property="Text" Value="● Loading"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Status}" Value="Success">
                    <Setter TargetName="StatusBadge" Property="Background" Value="#3065B5A6"/>
                    <Setter TargetName="StatusText" Property="Foreground" Value="#65B5A6"/>
                    <Setter TargetName="StatusText" Property="Text" Value="✔ Complete"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Status}" Value="MultipleMatches">
                    <Setter TargetName="StatusBadge" Property="Background" Value="#30FFB74D"/>
                    <Setter TargetName="StatusText" Property="Foreground" Value="#FFB74D"/>
                    <Setter TargetName="StatusText" Property="Text" Value="⚠ Multiple"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Status}" Value="NotFound">
                    <Setter TargetName="StatusBadge" Property="Background" Value="#30EF5350"/>
                    <Setter TargetName="StatusText" Property="Foreground" Value="#EF5350"/>
                    <Setter TargetName="StatusText" Property="Text" Value="? Not Found"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding Status}" Value="Error">
                    <Setter TargetName="StatusBadge" Property="Background" Value="#30FF1744"/>
                    <Setter TargetName="StatusText" Property="Foreground" Value="#FF1744"/>
                    <Setter TargetName="StatusText" Property="Text" Value="✘ Failed"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

    </UserControl.Resources>

    <Grid Style="{StaticResource ViewSlideInFromTopStyle}" Margin="0 0 16 16" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="{StaticResource Brush.Accent}" Padding="16 10" 
                IsEnabled="{Binding IsScraping, Converter={StaticResource BooleanInvertConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Visibility="{Binding IsResultButtonsVisible, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Invert}">
                    <Border Padding="18 0 8 0" Margin="-16 -10 -16 8" Height="50">
                        <TextBlock Text="Auction Filters" Foreground="{StaticResource Brush.Text.Subtle}" VerticalAlignment="Center" FontSize="14"/>
                    </Border>
                    <TextBlock  Style="{StaticResource Theme.TextBlock.SidebarLabel}" Text="State" Margin="4 0 0 4" />

                    <ComboBox DisplayMemberPath="Name"
                              ItemsSource="{Binding RealAuctionCalendarData.States}" 
                              SelectedItem="{Binding RealAuctionCalendarData.SelectedState}"                           
                              Style="{StaticResource Theme.ComboBox.Secondary}"/>                
                
                    <TextBlock Style="{StaticResource Theme.TextBlock.SidebarLabel}" Text="County" Margin="4 16 0 4"/>

                    <ComboBox ItemsSource="{Binding RealAuctionCalendarData.Counties}"
                              SelectedItem="{Binding RealAuctionCalendarData.SelectedCounty}"
                              Style="{StaticResource Theme.ComboBox.Secondary}"
                              ItemTemplateSelector="{StaticResource CountyTemplateSelector}" />
                
                    <TextBlock Style="{StaticResource Theme.TextBlock.SidebarLabel}" Text="Date" Margin="0 16 0 0" />
                    <DatePicker Style="{StaticResource Theme.DatePicker.Primary}" 
                                SelectedDate="{Binding RealAuctionCalendarData.SelectedDate}" 
                                DisplayDateStart="{Binding RealAuctionCalendarData.MinAuctionDate, Mode=OneWay}" />
            
                    <!-- Button to explicitly regenerate URL (optional) -->
                    <Button Content="Update"
                            Style="{StaticResource Theme.Button.Primary}"
                            Command="{Binding RealAuctionCalendarData.GenerateAuctionUrlCommand}" 
                            HorizontalAlignment="Right" Margin="0 16"/>
                </StackPanel>

                <Border Visibility="{Binding IsResultButtonsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <local:PropertyDetailsControl DataContext="{Binding ElementName=AuctionGrid, Path=SelectedItem}" />                    
                </Border>

                <Border Grid.Row="1" Visibility="{Binding PropertySelected.HasMultipleMatches, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" Margin="0 16 0 0">
                    <local:MultipleMatchesControl DataContext="{Binding ElementName=AuctionGrid, Path=SelectedItem}" />
                </Border>
            </Grid>
        </Border>

        <!-- Auction Data -->
        <Grid Grid.Column="1" Margin="16 0 0 0 ">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Background="{StaticResource Brush.Accent}" Padding="16 0" Height="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="{Binding CurrentAuctionAlias}" Style="{StaticResource VibrantButtonStyle}" Command="{Binding OpenRealAuctiomCommand}"/>

                    <Button Grid.Column="2" Content="Scrape" VerticalAlignment="Center"
                            Command="{Binding ScrapeRealAuctionCommand}" 
                            Style="{StaticResource Theme.Button.Primary}"
                            IsEnabled="{Binding IsScraping, Converter={StaticResource BooleanInvertConverter}}"
                            Visibility="{Binding IsScrapeVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"
                                IsEnabled="{Binding IsScraping, Converter={StaticResource BooleanInvertConverter}}"
                                Visibility="{Binding IsResultButtonsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Button Content="Clear" Command="{Binding ClearCommand}" />
                        <Button Content="Copy" />
                        <Button Content="Get Regrid Data" Style="{StaticResource Theme.Button.Primary}" Command="{Binding ScrapeRegridCommand}" />
                    </StackPanel>
                    
                </Grid>
            </Border>
            
            <!-- Parcel List -->
            <FrameworkElement Grid.Row="1" x:Name="FrameWorkElementProxy" Visibility="Collapsed"/>
            <DataGrid Grid.Row="1" x:Name="AuctionGrid" ItemsSource="{Binding PropertyRecords}" SelectedItem="{Binding PropertySelected, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Status" Width="90" CellTemplate="{StaticResource StatusBadgeTemplate}"   />
                    <DataGridTextColumn Header="Parcel ID" Binding="{Binding ParcelId}" Width="Auto"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                    <DataGridTextColumn Header="Owner" Binding="{Binding Owner}" Width="Auto" />
                    <DataGridTextColumn Header="Assessed" Binding="{Binding AssessedValue, StringFormat={}{0:C}}" Width="100"/>
                    <DataGridTextColumn Header="Opening Bid" Binding="{Binding Bid, StringFormat={}{0:C}}" Width="100"/>
                    <DataGridTextColumn Header="Acres" Binding="{Binding Acres, StringFormat={}{0:N4}}" Width="100"  />
                </DataGrid.Columns>
            </DataGrid>

            <Grid Grid.Row="2" Margin="0 8 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding Status}" Foreground="{StaticResource Brush.Accent}" />

                <ProgressBar IsIndeterminate="True" Height="16" Grid.Column="2"
                             Visibility="{Binding IsScraping, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
