<UserControl x:Class="AstroValleyAssistant.Views.MultipleMatchesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AstroValleyAssistant.Views"
             x:Name="Root">
    <UserControl.Resources>

        <DataTemplate x:Key="MatchCardTemplate">
            <Border x:Name="Card" Style="{StaticResource Theme.Border.Sidebar}" Margin="0 10 0 6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Parcel ID chip -->
                    <Border Grid.Row="0"
                            Padding="8 5 12 5"
                            CornerRadius="6 6 6 6"
                            BorderThickness="0" Margin="-4 -18 0 0"
                            BorderBrush="#40FFFFFF"
                            Background="#80201838"
                            HorizontalAlignment="Left">

                        <DockPanel LastChildFill="True">
                            <Path Width="13"
                                  Height="13"
                                  Margin="0,0,6,0"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  Data="{StaticResource Icon.List.Numbered}"
                                  Fill="{Binding Foreground, ElementName=ParcelLink}"/>

                            <Button x:Name="ParcelLink"
                                    Content="{Binding ParcelId}"
                                    FontSize="10"
                                    Padding="0"
                                    Style="{DynamicResource Theme.Button.Hyperlink}"
                                    CommandParameter="{Binding}"
                                    Command="{Binding ElementName=Root, Path=SelectMatchCommand}" />
                        </DockPanel>
                    </Border>

                    <!-- Main content -->
                    <StackPanel Grid.Row="2">

                        <!-- Address (primary) -->
                        <TextBlock FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Text="{Binding Address}"/>

                        <!-- City / State -->
                        <TextBlock FontSize="10"
                                   Opacity="0.85"
                                   Margin="0,2,0,0"
                                   Foreground="White"
                                   Text="{Binding City}" />

                        <Separator Background="{DynamicResource Brush.Text.Subtle}" Height=".5" Margin="0 6 0 4" Opacity=".5"/>

                        <!-- Owner metadata -->
                        <TextBlock FontSize="9" Opacity="0.55" Foreground="White" Text="{Binding Owner}" />
                    </StackPanel>
                </Grid>
            </Border>

            <DataTemplate.Triggers>
                <Trigger SourceName="Card" Property="IsMouseOver" Value="True">
                    <Setter TargetName="Card" Property="Background" Value="#2530294B"/>
                </Trigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Header / Title -->
        <TextBlock Text="Regrid Matches" Style="{StaticResource Theme.TextBlock.Sidebar.Title}" />

        <!-- List of Possible Matches -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Focusable="False">
            <ItemsControl ItemTemplate="{StaticResource MatchCardTemplate}" Focusable="False" 
                          ItemsSource="{Binding SelectedItem.Matches, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </ScrollViewer>
    </Grid>
</UserControl>