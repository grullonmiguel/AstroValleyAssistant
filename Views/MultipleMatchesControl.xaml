<UserControl x:Class="AstroValleyAssistant.Views.MultipleMatchesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <!-- Header / Title -->
        <TextBlock Text="Regrid Matches" Style="{StaticResource Theme.TextBlock.Sidebar.Title}" />
        
        <!-- List of Possible Matches -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Focusable="False">
            <ItemsControl ItemsSource="{Binding Matches}" ItemTemplate="{StaticResource MatchCardTemplate}" Focusable="False" />
        </ScrollViewer>
    </Grid>
</UserControl>
