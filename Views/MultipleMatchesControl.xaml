<UserControl x:Class="AstroValleyAssistant.Views.MultipleMatchesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <Border Padding="18 0 8 0" Margin="-16 -10 -16 8" Height="50">
            <TextBlock Text="Potential Matches" Foreground="{StaticResource Brush.Text.Subtle}" VerticalAlignment="Center" FontSize="14"/>
        </Border>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Matches}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Height="Auto"
                                Width="Auto"
                                Margin="0,0,0,8"                                 
                                CommandParameter="{Binding}"
                                HorizontalContentAlignment="Left"
                                Style="{StaticResource VibrantButtonStyle}"
                                Command="{Binding SelectMatchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock Text="{Binding Headline}" FontWeight="Bold" FontSize="12"/>
                                <TextBlock Text="{Binding Context}" FontSize="10"/>
                                <TextBlock Text="{Binding Owner}" FontSize="9" Margin="0,2,0,0" Opacity=".7"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</UserControl>
