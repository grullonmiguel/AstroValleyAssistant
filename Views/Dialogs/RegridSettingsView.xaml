<UserControl x:Class="AstroValleyAssistant.Views.Dialogs.RegridSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:pwd="clr-namespace:AstroValleyAssistant.Core.Behaviors"
             xmlns:local="clr-namespace:AstroValleyAssistant.Views.Dialogs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock Text="Regrid Credentials" FontSize="24" Foreground="{DynamicResource Brush.Accent}"/>
        <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="16" Margin="0 8" Text="Enter you Regrid credentials here." />

        <!-- Email -->
        <TextBlock Grid.Row="2" Text="Email address" Margin="0 24 50 4" Foreground="{StaticResource Brush.Accent}" />
        <TextBox 
            Grid.Row="3" 
            Padding="4" 
            Margin="0 0" 
            Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
            FontSize="{StaticResource FontSize.Large}" />

        <!-- Password -->
        <TextBlock Grid.Row="4" Text="Password" Margin="0 16 0 4" Foreground="{StaticResource Brush.Accent}" />
        <PasswordBox 
            Grid.Row="5" 
            Padding="4" 
            Margin="0 0"
            FontSize="{StaticResource FontSize.Large}"
            pwd:PasswordBoxAssistant.BindPassword="True" 
            pwd:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Submit -->
        <Button 
            Grid.Row="6" 
            Content="SAVE" 
            Margin="0 32 0 0" 
            HorizontalAlignment="Right" 
            Command="{Binding SaveCommand}"/>
    </Grid>
</UserControl>
